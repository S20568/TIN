<%- include('../../fragments/header.ejs') %>
<main>
    <h2><%= __('list.title')%></h2>
    <table class="table-list">
        <thead>
            <tr>
                <th><%= __('model.fields.modelName')%></th>
                <th><%= __('model.fields.modelManufacturer')%></th>
                <th><%= __('model.fields.modelScale')%></th>
                <th><%= __('model.fields.modelPrice')%></th>
                <th><%= __('list.actions.title')%></th>
            </tr>
        </thead>
        <tbody>
        <% for (let model of models) { %>
            <tr>
                <td><%= model.modelName %></td>
                <td><%= model.modelManufacturer %></td>
                <td><%= model.modelScale %></td>
                <td><%= model.modelPrice %></td>
                <td>
                    <ul class="list-actions">
                        <li>
                            <a href="/models/details/<%=model._id%>" class="list-actions-button-details"><%= __('list.actions.details')%></a>
                        </li>
                        <li>
                            <a href="/models/edit/<%=model._id%>" class="list-actions-button-edit"><%= __('list.actions.edit')%></a>
                        </li>
                        <li>
                            <a href="/models/delete/<%=model._id%>" class="list-actions-button-delete"><%= __('list.actions.delete')%></a>
                        </li>
                    </ul>
                </td>
            </tr>
        <% } %>
        </tbody>
    </table>
    <p><a href="/models/add" class="button-add"><%= __('model.list.addNew')%></a></p>
</main>
<%- include('../../fragments/footer.ejs') %>