<%- include('../../fragments/header.ejs') %>
<main>
    <h2>Dostępne modele</h2>
    <table class="table-list">
        <thead>
            <tr>
                <th>Nazwa</th>
                <th>Producent</th>
                <th>Skala</th>
                <th>Cena</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        <% for (let model of models) { %>
            <tr>
                <td><%= model.modelName %></td>
                <td><%= model.modelManufacturer %></td>
                <td><%= model.modelScale %></td>
                <td><%= model.modelPrice %></td>
                <td>
                    <ul class="list-actions">
                        <li>
                            <a href="/models/details/<%=model._id%>" class="list-actions-button-details">Szczegóły</a>
                        </li>
                        <li>
                            <a href="/models/edit/<%=model._id%>" class="list-actions-button-edit">Edytuj</a>
                        </li>
                        <li>
                            <a href="/models/delete/<%=model._id%>" class="list-actions-button-delete">Usuń</a>
                        </li>
                    </ul>
                </td>
            </tr>
        <% } %>
        </tbody>
    </table>
    <p><a href="/models/add" class="button-add">Dodaj nowy model</a></p>
</main>
<%- include('../../fragments/footer.ejs') %>